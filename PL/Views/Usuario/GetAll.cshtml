@model ML.Usuario
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align:center"><strong>Usuarios</strong></h1>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-1">
            @Html.ActionLink("", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success bi bi-person-plus-fill" })
        </div>
    </div>

    <br />

    <div>
        @if (Model.Usuarios != null)
        {
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-dark table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Editar</th>
                                <th scope="col" class="visually-hidden">Id</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Apellido Paterno</th>
                                <th scope="col">Apellido Materno</th>
                                <th scope="col">Email</th>
                                <th scope="col">Contraseña</th>
                                <th scope="col">Telefono</th>
                                <th scope="col" class="visually-hidden">Id</th>
                                <th scope="col">Acceso</th>
                                <th scope="col">Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ML.Usuario usuario in Model.Usuarios)
                            {
                                <tr>
                                    <td>
                                        <a class="btn btn-warning bi bi-pencil-fill" href="@Url.Action("Form", "Usuario", new {IdUsuario = usuario.IdUsuario})"></a>
                                    </td>
                                    <td class="visually-hidden">@usuario.IdUsuario</td>
                                    <td>@usuario.Nombre</td>
                                    <td>@usuario.ApellidoPaterno</td>
                                    <td>@usuario.ApellidoMaterno</td>
                                    <td>@usuario.Email</td>
                                    <td>@usuario.Contrasenia</td>
                                    <td>@usuario.Telefono</td>
                                    <td class="visually-hidden">@usuario.Acceso.IdAcceso</td>
                                    <td>@usuario.Acceso.Tipo</td>
                                    <td>
                                        <a class="btn btn-danger bi bi-person-dash-fill" href="@Url.Action("Delete", "Usuario", new { IdUsuario = usuario.IdUsuario })" onclick="return confirm('¿Estas seguro que deseas eliminar estos datos?');"></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Message
            </div>
        }
    </div>
</div>